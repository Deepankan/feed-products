<h2 class="text-center">Sign Up</h2>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :role, autofocus: false, autocomplete: 'name', placeholder: 'Name', value: 'provider' %>
    <%= f.text_field :name, autofocus: false, autocomplete: 'name', placeholder: 'Name' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= f.password_field :password,
          autocomplete: "new-password",
          help: "(#{@minimum_password_length} characters minimum)" %>
    <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          label_class: "required" %>

    <%= f.form_group do %>
      <%= f.submit "Sign up", class: "btn btn-primary btn-block btn-lg" %>
    <% end %>
  <% end %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
  </div>
  <div class="col-md-3"></div>
</div>